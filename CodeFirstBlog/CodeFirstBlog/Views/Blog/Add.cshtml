@model CodeFirstBlog.DTOs.BlogDto
@{
    ViewData["Title"] = "Create";
}
<h1>Create Product</h1>
<div class="row">
    <div class="col-md-4"></div>
    <form asp-action="Add">
        
        <div class="form-group">
            
            <label asp-for="BlogTitle">Blog Title:</label>
            <input asp-for="BlogTitle" class="form-control" />
            <label asp-for="BlogDescription">Blog Description:</label>
            <input asp-for="BlogDescription" class="form-control" />
             <select asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))" asp-for="CategoryId"> 

            <option>Kategori Seçiniz</option>
             </select>
            @Html.ActionLink("Kategori Giriniz","CategoryAdd","Category")
        </div>
        <div class="form-group">
            <input type="submit" value="Add" class="btn-primary" />
        </div>

    </form>

</div>
